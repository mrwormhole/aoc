{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Day",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/day${input:dayNumber}/main",
            "args": ["${input:inputFile}"],
            "cwd": "${workspaceFolder}/day${input:dayNumber}",
            "preLaunchTask": "build-all-days",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "dayNumber",
            "type": "promptString",
            "description": "Enter day number (1-25)",
            "default": "1"
        },
        {
            "id": "inputFile",
            "type": "pickString",
            "description": "Select input file",
            "options": [
                "input.txt",
                "sample.txt"
            ],
            "default": "input.txt"
        }
    ]
}
