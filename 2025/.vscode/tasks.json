{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-day",
            "type": "shell",
            "command": "make",
            "args": [
                "build",
                "DAY=${input:dayNumber}",
                "CXXFLAGS=-std=c++17 -Wall -Wextra -g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ],
    "inputs": [
        {
            "id": "dayNumber",
            "type": "promptString",
            "description": "Enter day number (1-25)",
            "default": "1"
        }
    ]
}
